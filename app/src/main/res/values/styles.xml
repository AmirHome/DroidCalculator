<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FlatButtonBold" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/TextBold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorOperators</item>

    </style>
    <style name="FlatButtonNormal" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/TextNormal</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorOperands</item>

    </style>

    <style name="TextNormal" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="TextBold" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">38sp</item>
    </style>
</resources>
